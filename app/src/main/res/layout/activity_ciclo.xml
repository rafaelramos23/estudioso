<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/activity_ciclo"
    tools:openDrawer="start"
    tools:context=".CicloActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <TextView
        android:id="@+id/txtCadCiclo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:autoText="true"
        android:background="#E4E5EE"
        android:gravity="center"
        android:text="Ciclo de Estudo"
        android:textColor="#39393C"
        android:textSize="18sp"
        app:fontFamily="sans-serif-smallcaps" />

    <com.beardedhen.androidbootstrap.BootstrapDropDown
        android:id="@+id/spnMateriaCiclo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:bootstrapText="Selecione a Matéria"
        app:bootstrapBrand="info"
        app:roundedCorners="true"
        app:bootstrapSize="lg"
        app:dropdownResource="@array/listaMateria"
        app:bootstrapExpandDirection="down"/>

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/edtHoraInicialCiclo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:inputType="time"
        app:bootstrapSize="xl"
        app:bootstrapBrand="info"
        android:hint="Previsão de horário inicial"
        app:roundedCorners="true"
        />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/edtHoraFinalCiclo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:inputType="time"
        app:bootstrapSize="xl"
        app:bootstrapBrand="info"
        android:hint="Previsão de horário final"
        app:roundedCorners="true"
        />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btnAddMatCiclo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adicionar matéria"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:bootstrapBrand="info"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:showOutline="true"
        app:roundedCorners="true" />


        <ListView
            android:id="@+id/lstRegistrosDia"
            android:layout_width="276dp"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>

    <include
        layout="@layout/nav_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </include>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:fitsSystemWindows="false"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menuaction"
        android:id="@+id/nav_view"
        />

    </androidx.drawerlayout.widget.DrawerLayout>