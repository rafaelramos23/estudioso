<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCEEEE"
    android:orientation="vertical"
    tools:context=".CronogramaActivity">

    <TextView
        android:id="@+id/txtCadCronograma2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="center"
        android:autoText="true"
        android:background="#E4E5EE"
        android:gravity="center"
        android:text="Cronograma de Estudo"
        android:textColor="#39393C"
        android:textSize="18sp"
        app:fontFamily="sans-serif-smallcaps" />

    <Spinner
        android:id="@+id/spnDiaSemana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="center" />

    <Spinner
        android:id="@+id/spnMateria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="center" />

    <EditText
        android:id="@+id/edtHoraInicial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="center"
        android:hint="previsão de horário inicial"
        android:ems="10"
        android:inputType="date" />

    <EditText
        android:id="@+id/edtHoraFinal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="center"
        android:hint="previsão de horário final"
        android:ems="10"
        android:inputType="date" />

    <Button
        android:id="@+id/btnAdicionar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="center"
        android:text="Adicionar" />

    <TextView
        android:id="@+id/txtConsultaDia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="center"
        android:autoText="true"
        android:background="#E4E5EE"
        android:gravity="center"
        android:text="Matérias nesse dia"
        android:textColor="#39393C"
        android:textSize="18sp"
        app:fontFamily="sans-serif-smallcaps" />

    <ListView
        android:id="@+id/lstRegistrosDia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="center" />

</LinearLayout>